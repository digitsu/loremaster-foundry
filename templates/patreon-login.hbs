{{!--
  Patreon Login Template

  Displays authentication UI for hosted mode users.
  Shows different content based on auth state:
  - Logged out: Sign in button
  - Logging in: Loading state
  - Logged in: User info, tier, quota
  - Error: Error message with retry
--}}

<div class="patreon-login-container">

  {{!-- Logged Out State --}}
  {{#if isLoggedOut}}
  <div class="patreon-state patreon-state--logged-out">
    <div class="patreon-logo">
      <i class="fas fa-book-open fa-3x"></i>
    </div>

    <div class="patreon-message">
      <h3>{{localize "LOREMASTER.PatreonLogin.ConnectAccount"}}</h3>
      <p>{{localize "LOREMASTER.PatreonLogin.SignInHint"}}</p>
    </div>

    <button type="button" class="patreon-login-btn">
      <span class="patreon-icon">üÖøÔ∏è</span>
      {{localize "LOREMASTER.PatreonLogin.SignInBtn"}}
    </button>

    <div class="patreon-divider">
      <span>{{localize "LOREMASTER.PatreonLogin.Or"}}</span>
    </div>

    <button type="button" class="patreon-paste-token-btn">
      <i class="fas fa-paste"></i>
      {{localize "LOREMASTER.PatreonLogin.PasteTokenBtn"}}
    </button>

    <div class="patreon-footer">
      <p class="patreon-footer-text">{{localize "LOREMASTER.PatreonLogin.NoSubscription"}}</p>
      <a href="#" class="patreon-subscribe-link">{{localize "LOREMASTER.PatreonLogin.SubscribeLink"}}</a>
    </div>
  </div>
  {{/if}}

  {{!-- Logging In State --}}
  {{#if isLoggingIn}}
  <div class="patreon-state patreon-state--logging-in">
    <div class="patreon-spinner">
      <i class="fas fa-spinner fa-spin fa-3x"></i>
    </div>

    <div class="patreon-message">
      <h3>{{localize "LOREMASTER.PatreonLogin.SigningIn"}}</h3>
      <p>{{localize "LOREMASTER.PatreonLogin.SigningInHint"}}</p>
      <p class="patreon-hint">{{localize "LOREMASTER.PatreonLogin.PopupBlockedHint"}}</p>
    </div>

    <div class="patreon-divider">
      <span>{{localize "LOREMASTER.PatreonLogin.Or"}}</span>
    </div>

    <button type="button" class="patreon-paste-token-btn">
      <i class="fas fa-paste"></i>
      {{localize "LOREMASTER.PatreonLogin.PasteTokenBtn"}}
    </button>
  </div>
  {{/if}}

  {{!-- Logged In State --}}
  {{#if isLoggedIn}}
  <div class="patreon-state patreon-state--logged-in">
    <div class="patreon-header">
      <div class="patreon-status-icon">‚úì</div>
      <span class="patreon-status-text">{{localize "LOREMASTER.PatreonLogin.Connected"}}</span>
    </div>

    <div class="patreon-user-info">
      <div class="patreon-user-name">{{displayName}}</div>
      {{#if email}}
      <div class="patreon-user-email">{{email}}</div>
      {{/if}}
    </div>

    <div class="patreon-tier" style="border-color: {{tierColor}}">
      <span class="tier-icon">{{tierIcon}}</span>
      <span class="tier-name" style="color: {{tierColor}}">{{tierName}}</span>
      <button type="button" class="refresh-tier-btn" title="Refresh tier from Patreon">
        <i class="fas fa-sync-alt"></i>
      </button>
    </div>

    {{!-- RAG Status Indicator --}}
    <div class="patreon-rag-status {{#if ragAvailable}}rag-unlocked{{else}}rag-locked{{/if}}">
      {{#if ragAvailable}}
      <span class="rag-icon">üîì</span>
      <span class="rag-text">{{localize "LOREMASTER.PatreonLogin.RAGEnabled"}}</span>
      {{else}}
      <span class="rag-icon">üîí</span>
      <span class="rag-text">{{localize "LOREMASTER.PatreonLogin.RAGLocked"}}</span>
      <span class="rag-hint">({{localize "LOREMASTER.PatreonLogin.RAGRequiresTier" tier=ragRequiredTier}})</span>
      {{/if}}
    </div>

    {{!-- Shared Resources Section --}}
    <div class="patreon-shared-resources shared-{{sharedTierLevel sharedTierCurrent sharedTierMax}}">
      <span class="shared-icon">üìö</span>
      <span class="shared-text">{{localize "LOREMASTER.PatreonLogin.SharedResources"}}:</span>
      {{#if sharedTierUnlimited}}
      <span class="shared-count">{{localize "LOREMASTER.PatreonLogin.ActivatedUnlimited" count=sharedTierCurrent}}</span>
      <a href="#" class="manage-shared-link">[{{localize "LOREMASTER.PatreonLogin.ManageLink"}}]</a>
      {{else}}
        {{#if (eq sharedTierMax 0)}}
        <span class="shared-count">{{localize "LOREMASTER.PatreonLogin.UpgradeAccess"}}</span>
        <a href="{{patreonUrl}}" target="_blank" class="patreon-subscribe-link">{{localize "LOREMASTER.PatreonLogin.SubscribeLink"}}</a>
        {{else}}
        <span class="shared-count">{{localize "LOREMASTER.PatreonLogin.ActivatedCount" current=sharedTierCurrent max=sharedTierMax}}</span>
        <a href="#" class="manage-shared-link">[{{localize "LOREMASTER.PatreonLogin.ManageLink"}}]</a>
        {{/if}}
      {{/if}}
    </div>

    {{!-- Quota Section --}}
    <div class="patreon-quota">
      <div class="quota-header">
        <span class="quota-title">{{localize "LOREMASTER.PatreonLogin.MonthlyUsage"}}</span>
        {{#if isLoadingQuota}}
        <i class="fas fa-spinner fa-spin"></i>
        {{else}}
        <button type="button" class="refresh-quota-btn" title="Refresh">
          <i class="fas fa-sync-alt"></i>
        </button>
        {{/if}}
      </div>

      {{#if quota}}
      <div class="quota-bar-container">
        <div class="quota-bar quota-bar--{{quotaLevel tokensUsed tokensLimit}}"
             style="width: {{quotaPercent tokensUsed tokensLimit}}%">
        </div>
      </div>

      <div class="quota-details">
        <span class="quota-used">{{formatTokens tokensUsed}}</span>
        <span class="quota-separator">/</span>
        <span class="quota-limit">{{formatTokens tokensLimit}}</span>
        <span class="quota-percent">({{quotaPercent tokensUsed tokensLimit}}%)</span>
      </div>

      {{#if quotaResetDate}}
      <div class="quota-reset">
        {{localize "LOREMASTER.PatreonLogin.ResetsDate" date=quotaResetDate}}
      </div>
      {{/if}}
      {{else}}
      <div class="quota-bar-container">
        <div class="quota-bar" style="width: 0%"></div>
      </div>
      <div class="quota-details">
        <span class="quota-limit">{{formatTokens tokenLimit}} {{localize "LOREMASTER.PatreonLogin.TokensPerMonth"}}</span>
      </div>
      {{/if}}
    </div>

    <div class="patreon-actions">
      <button type="button" class="patreon-logout-btn">
        <i class="fas fa-sign-out-alt"></i>
        {{localize "LOREMASTER.PatreonLogin.SignOut"}}
      </button>
    </div>
  </div>
  {{/if}}

  {{!-- Error State --}}
  {{#if isError}}
  <div class="patreon-state patreon-state--error">
    <div class="patreon-error-icon">
      <i class="fas fa-exclamation-triangle fa-3x"></i>
    </div>

    <div class="patreon-message">
      <h3>{{localize "LOREMASTER.PatreonLogin.AuthFailed"}}</h3>
      <p class="patreon-error-text">{{errorMessage}}</p>
    </div>

    <button type="button" class="patreon-retry-btn">
      <i class="fas fa-redo"></i>
      {{localize "LOREMASTER.PatreonLogin.TryAgain"}}
    </button>

    <div class="patreon-divider">
      <span>{{localize "LOREMASTER.PatreonLogin.Or"}}</span>
    </div>

    <button type="button" class="patreon-paste-token-btn">
      <i class="fas fa-paste"></i>
      {{localize "LOREMASTER.PatreonLogin.PasteTokenBtn"}}
    </button>

    <div class="patreon-footer">
      <a href="#" class="patreon-subscribe-link">{{localize "LOREMASTER.PatreonLogin.SubscribeLink"}}</a>
    </div>
  </div>
  {{/if}}

</div>

<style>
  /* Container */
  .patreon-login-container {
    padding: 1rem;
    font-family: var(--font-primary);
  }

  /* State containers */
  .patreon-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1rem;
  }

  /* Logo */
  .patreon-logo {
    margin-bottom: 0.5rem;
    color: #d4af37;
    filter: drop-shadow(0 0 10px rgba(212, 175, 55, 0.3));
  }

  /* Messages */
  .patreon-message h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.25rem;
    color: var(--color-text-dark-primary, #191813);
  }

  .patreon-message p {
    margin: 0;
    color: var(--color-text-dark-secondary, #4b4a44);
    font-size: 0.9rem;
  }

  .patreon-hint {
    font-size: 0.8rem !important;
    color: var(--color-text-dark-tertiary, #7a7971) !important;
    font-style: italic;
    margin-top: 0.5rem !important;
  }

  /* Sign in button */
  .patreon-login-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    font-weight: 600;
    color: #ffffff;
    background: linear-gradient(135deg, #f96854 0%, #ff424d 100%);
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
    width: 100%;
    max-width: 280px;
  }

  .patreon-login-btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(249, 104, 84, 0.4);
  }

  .patreon-login-btn:active {
    transform: translateY(0);
  }

  .patreon-icon {
    font-size: 1.25rem;
  }

  /* Divider */
  .patreon-divider {
    display: flex;
    align-items: center;
    width: 100%;
    max-width: 280px;
    margin: 0.5rem 0;
  }

  .patreon-divider::before,
  .patreon-divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: var(--color-border-light);
  }

  .patreon-divider span {
    padding: 0 1rem;
    color: var(--color-text-dark-secondary, #4b4a44);
    font-size: 0.85rem;
  }

  /* Paste token button */
  .patreon-paste-token-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.6rem 1.25rem;
    font-size: 0.9rem;
    color: var(--color-text-dark-primary, #191813);
    background: var(--color-bg-btn);
    border: 1px solid var(--color-border-light);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s;
    width: 100%;
    max-width: 280px;
  }

  .patreon-paste-token-btn:hover {
    border-color: #d4af37;
    color: #d4af37;
  }

  /* Footer */
  .patreon-footer {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border-light);
    width: 100%;
  }

  .patreon-footer-text {
    margin: 0 0 0.25rem 0;
    font-size: 0.85rem;
    color: var(--color-text-dark-secondary, #4b4a44);
  }

  .patreon-subscribe-link {
    color: #d4af37;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  .patreon-subscribe-link:hover {
    color: #f4d03f;
    text-decoration: underline;
  }

  /* Spinner */
  .patreon-spinner {
    color: #d4af37;
    margin: 1rem 0;
  }

  /* Logged in state */
  .patreon-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(74, 222, 128, 0.15);
    border: 1px solid rgba(74, 222, 128, 0.3);
    border-radius: 20px;
  }

  .patreon-status-icon {
    color: #4ade80;
    font-weight: bold;
  }

  .patreon-status-text {
    color: #4ade80;
    font-weight: 600;
    font-size: 0.9rem;
  }

  .patreon-user-info {
    margin: 0.5rem 0;
  }

  .patreon-user-name {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-text-dark-primary, #191813);
  }

  .patreon-user-email {
    font-size: 0.85rem;
    color: var(--color-text-dark-secondary, #4b4a44);
  }

  /* Tier badge */
  .patreon-tier {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 1rem;
    background: rgba(212, 175, 55, 0.1);
    border: 1px solid;
    border-radius: 20px;
  }

  .tier-icon {
    font-size: 0.9rem;
  }

  .tier-name {
    font-weight: 600;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .refresh-tier-btn {
    background: none;
    border: none;
    color: var(--color-text-dark-secondary, #4b4a44);
    cursor: pointer;
    padding: 0.25rem;
    margin-left: 0.5rem;
    transition: color 0.2s, transform 0.3s;
  }

  .refresh-tier-btn:hover {
    color: #d4af37;
  }

  .refresh-tier-btn.refreshing {
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* RAG Status Indicator */
  .patreon-rag-status {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.85rem;
    width: 100%;
  }

  .patreon-rag-status.rag-unlocked {
    background: rgba(74, 222, 128, 0.15);
    border: 1px solid rgba(74, 222, 128, 0.3);
    color: #4ade80;
  }

  .patreon-rag-status.rag-locked {
    background: rgba(248, 113, 113, 0.1);
    border: 1px solid rgba(248, 113, 113, 0.2);
    color: var(--color-text-dark-secondary, #4b4a44);
  }

  .rag-icon {
    font-size: 1rem;
  }

  .rag-text {
    font-weight: 600;
  }

  .rag-hint {
    font-size: 0.75rem;
    color: var(--color-text-dark-tertiary, #7a7971);
    font-style: italic;
  }

  /* Shared Resources Section */
  .patreon-shared-resources {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.85rem;
    width: 100%;
    margin-top: 0.5rem;
  }

  .patreon-shared-resources.shared-available {
    background: rgba(74, 222, 128, 0.15);
    border: 1px solid rgba(74, 222, 128, 0.3);
    color: #4ade80;
  }

  .patreon-shared-resources.shared-at-limit {
    background: rgba(251, 191, 36, 0.15);
    border: 1px solid rgba(251, 191, 36, 0.3);
    color: #fbbf24;
  }

  .patreon-shared-resources.shared-none {
    background: rgba(156, 163, 175, 0.15);
    border: 1px solid rgba(156, 163, 175, 0.3);
    color: var(--color-text-dark-secondary, #4b4a44);
  }

  .shared-icon {
    font-size: 1rem;
  }

  .shared-text {
    font-weight: 600;
  }

  .shared-count {
    font-size: 0.85rem;
  }

  .manage-shared-link {
    color: #d4af37;
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 600;
    margin-left: 0.25rem;
    transition: color 0.2s;
  }

  .manage-shared-link:hover {
    color: #f4d03f;
    text-decoration: underline;
  }

  /* Quota section */
  .patreon-quota {
    width: 100%;
    padding: 1rem;
    background: var(--color-bg-option);
    border: 1px solid var(--color-border-light);
    border-radius: 8px;
    margin-top: 0.5rem;
  }

  .quota-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
  }

  .quota-title {
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--color-text-dark-primary, #191813);
  }

  .refresh-quota-btn {
    background: none;
    border: none;
    color: var(--color-text-dark-secondary, #4b4a44);
    cursor: pointer;
    padding: 0.25rem;
    transition: color 0.2s;
  }

  .refresh-quota-btn:hover {
    color: #d4af37;
  }

  .quota-bar-container {
    height: 12px;
    background: var(--color-bg-btn);
    border-radius: 6px;
    overflow: hidden;
    margin-bottom: 0.5rem;
  }

  .quota-bar {
    height: 100%;
    background: linear-gradient(90deg, #4ade80 0%, #22c55e 100%);
    border-radius: 6px;
    transition: width 0.3s ease;
  }

  .quota-bar--warning {
    background: linear-gradient(90deg, #fbbf24 0%, #f59e0b 100%);
  }

  .quota-bar--critical {
    background: linear-gradient(90deg, #f87171 0%, #ef4444 100%);
  }

  .quota-details {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    color: var(--color-text-dark-primary, #191813);
  }

  .quota-used {
    font-weight: 600;
  }

  .quota-separator {
    color: var(--color-text-dark-secondary, #4b4a44);
  }

  .quota-percent {
    color: var(--color-text-dark-secondary, #4b4a44);
    font-size: 0.8rem;
  }

  .quota-reset {
    margin-top: 0.5rem;
    font-size: 0.8rem;
    color: var(--color-text-dark-secondary, #4b4a44);
  }

  /* Actions */
  .patreon-actions {
    margin-top: 1rem;
    width: 100%;
  }

  .patreon-logout-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    font-size: 0.9rem;
    color: var(--color-text-dark-secondary, #4b4a44);
    background: var(--color-bg-btn);
    border: 1px solid var(--color-border-light);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s;
    width: 100%;
  }

  .patreon-logout-btn:hover {
    color: var(--color-text-dark-primary, #191813);
    border-color: var(--color-border-dark-highlight, #7a7971);
  }

  /* Error state */
  .patreon-state--error .patreon-error-icon {
    color: #f87171;
    margin: 0.5rem 0;
  }

  .patreon-error-text {
    color: #f87171 !important;
  }

  .patreon-retry-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.6rem 1.25rem;
    font-size: 0.9rem;
    color: #ffffff;
    background: var(--color-bg-btn);
    border: 1px solid var(--color-border-light);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s;
  }

  .patreon-retry-btn:hover {
    background: var(--color-bg-option);
    border-color: #d4af37;
    color: #d4af37;
  }
</style>
