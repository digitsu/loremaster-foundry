# Loremaster Server Configuration
# Copy this file to .env and fill in your values

# Server settings
PORT=3001
HOST=localhost

# Claude API settings (optional - users provide their own keys)
# CLAUDE_MODEL=claude-sonnet-4-20250514
# CLAUDE_MAX_TOKENS=2048

# Storage paths (optional - defaults to ./data/)
# DB_PATH=./data/loremaster.db
# UPLOADS_PATH=./data/uploads

# Security (REQUIRED for production)
# Generate a random 32-byte hex string: openssl rand -hex 32
ENCRYPTION_KEY=

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:30000
